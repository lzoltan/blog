<h1>Posts</h1>

<p><%= link_to 'Add new post' , new_post_path, class: "btn btn-primary"%></p>

<% @posts.each do |p| %>
<h2><%= link_to p.title, p %></h2>
<p><%= p.content %></p>
<p>
<%= link_to 'Edit', edit_post_path(p)%>
<%= link_to 'Delete', p, :method=>'delete', data: {:confirm => "Are you sure?"}  %>
</p>
<hr>
<% end %> 

